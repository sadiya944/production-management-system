{
    "name": "mrezadit/production-management-system",
    "description": "A production management system built with CodeIgniter for case studies and learning purposes.",
    "type": "project",
    "require": {
        "php": "^8.0.25",
        "codeigniter/framework": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}